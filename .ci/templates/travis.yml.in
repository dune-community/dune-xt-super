sudo: true
dist: trusty
language: generic
services: docker

before_script:
    - export MY_MODULE={{project_name}}
    - export BASEIMAGE="${MY_MODULE}-testing_${DOCKER_TAG}:${TRAVIS_BRANCH}"
    - export IMAGE="dunecommunity/ci_${MY_MODULE}-testing_${DOCKER_TAG}:${TRAVIS_COMMIT}"
    # get image with fallback to master branch of the super repo
    - docker pull dunecommunity/${BASEIMAGE} || export BASEIMAGE="${MY_MODULE}-testing_${DOCKER_TAG}:master" ; docker pull dunecommunity/${BASEIMAGE}
    - docker build --build-arg BASE=${BASEIMAGE} -t ${IMAGE} -f .ci/docker/Dockerfile .

    - export ENV_FILE=${HOME}/env
    - python3 ./.travis.make_env_file.py
    - docker inspect ${IMAGE}
    - export DOCKER_RUN="docker run --env-file ${ENV_FILE} ${IMAGE}"

script:
    - ${DOCKER_RUN} /home/dune-ci/src/{{project_name}}/.travis.script.bash

# runs independent of 'script' failure/success
after_script:
    - ${DOCKER_RUN} /home/dune-ci/src/{{project_name}}/.travis.after_script.bash
    # output for simpler replicability
    - docker images ${IMAGE}
    - echo ${DOCKER_RUN}

after_failure:
    - echo $DOCKER_PW | docker login --username="$DOCKER_USER" --password-stdin
    - docker push ${IMAGE}
    - echo "execute\n ${DOCKER_RUN} /home/dune-ci/src/{{project_name}}/.travis.script.bash\n to examine errors"

notifications:
  email:
    on_success: change
    on_failure: change

branches:
  except:
    - gh-pages

stages:
    - Test C++
    - Test Python Bindings

jobs:
  include:
  {%- for tag in docker_tags %}
    {%- if bin_count > 0 %}
      {%- for count in range(bin_count) %}
  - stage: test_cpp
    env: DOCKER_TAG={{tag}} TESTS={{count}}
      {%- endfor %}
    {% else %}
  - stage: test_cpp
    env: DOCKER_TAG={{tag}}
    {%- endif %}
  {%- endfor %}

  {%- for tag in docker_tags %}
  - stage: test_python
    env: DOCKER_TAG={{tag}}
    script: ${DOCKER_RUN} /home/dune-ci/src/{{project_name}}/.travis.test_python.bash
    # overwrite other global/matrix settings
    after_script: true
  {%- endfor %}

