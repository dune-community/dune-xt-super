sudo: false
dist: trusty
language: generic
services: docker

before_script:
    - export IMAGE="dunecommunity/{{project_name}}-testing_${DOCKER_TAG}:${TRAVIS_BRANCH}"
    # get image with fallback to master branch of the super repo
    - docker pull ${IMAGE} || export IMAGE="dunecommunity/{{project_name}}-testing_${DOCKER_TAG}:master" ; docker pull ${IMAGE}
    - export MY_MODULE={{project_name}}
    - export ENV_FILE=${HOME}/env
    - python3 ./.travis.make_env_file.py
    - docker inspect ${IMAGE}
    - export DOCKER_RUN="docker run --env-file ${ENV_FILE} -v ${TRAVIS_BUILD_DIR}:/root/src/{{project_name}} ${IMAGE}"

script:
    - ${DOCKER_RUN} /root/src/{{project_name}}/.travis.script.bash

# runs independent of 'script' failure/success
after_script:
    - ${DOCKER_RUN} /root/src/{{project_name}}/.travis.after_script.bash
    # output for simpler replicability
    - docker images ${IMAGE}
    - echo ${DOCKER_RUN}


notifications:
  email:
    on_success: change
    on_failure: change
  webhooks:
    - https://buildtimetrend.herokuapp.com/travis

#after_success:
#- coveralls

branches:
  except:
    - gh-pages

stages:
    - Test C++
    - Test Python Bindings

jobs:
  include:
  {%- for tag in docker_tags %}
    {%- if bin_count > 0 %}
      {%- for count in range(bin_count) %}
  - stage: test_cpp
    env: DOCKER_TAG={{tag}} TESTS={{count}}
      {%- endfor %}
    {% else %}
  - stage: test_cpp
    env: DOCKER_TAG={{tag}}
    {%- endif %}
  {%- endfor %}

  {%- for tag in docker_tags %}
  - stage: test_python
    env: DOCKER_TAG={{tag}}
    script: ${DOCKER_RUN} /root/src/{{project_name}}/.travis.test_python.bash
    # overwrite other global/matrix settings
    after_script: true
  {%- endfor %}

